*
  margin 0
  padding 0
  box-sizing border-box
  outline: none
  text-decoration none

html
  font-size: 10px

#wrapper
  background: white url('/images/body-bg.png') top left/100% repeat-y
  width 100%
  overflow-x: hidden

.preloader
  position fixed
  top 0
  left 0
  display flex
  justify-content: center
  align-items: center
  height: 100vh
  width 100%
  z-index: 1000009
  background-color: white
  transition .5s
  & video
    max-width: 90%;

.g-wrapper
  max-width: 120rem
  margin 0 auto
  padding-left 0.6rem
  padding-right 0.6rem

.button
  background-color #bb5e36
  border none
  padding 2rem 6.2rem
  font-family: 'Open Sans'
  font-weight: 700
  color: white
  font-size: 1.6rem
  cursor: pointer
  box-shadow: 0 0.6rem 2rem RGBA(0,0,0,0.3);
  transition: .3s
  &:hover
    background-color: #C88B52

.handwritten
  display inline-block
  font-family: 'Solena'
  font-size: 4rem
  color #C88B52
  transform-origin: left bottom
  transform: rotate(-11deg)

.to-top
  position fixed
  right 1.5rem
  bottom 3rem
  z-index: 300
  width 50px
  opacity 0
  transition .5s
  & img
    width 100%

.custom-gallery .lg-img-wrap
  max-height: calc(100vh - 100px)

@media (max-width: 1024px)
  .g-wrapper
    max-width: 72rem
  .button
    font-size: 1.4rem
    padding 1.5rem 3.6rem
  .handwritten
    font-size: 2.4rem

.shine
  display inline-grid
  width 100%
  position: relative
  overflow hidden
  &:before
    position: absolute;
    top: 0;
    left: -75%;
    z-index: 2;
    display: block;
    content: '';
    width: 50%;
    height: 100%;
    background: linear-gradient(to right, rgba(255,255,255,0) 0%, rgba(255,255,255,.3) 100%);
    transform: skewX(-25deg);
  &:hover:before
	  animation: shine .75s;
@keyframes shine {
	100% {
		left: 125%;
	}
}

@media (max-width: 719px)
  .g-wrapper
    max-width: 29rem
  .button
    font-size: 1.2rem
    padding 1.4rem 2.6rem
  .handwritten
    font-size: 2rem
  .to-top
    width: 25px
