.works
  &__title
    margin-bottom 4.4rem
  &__descript
    font-weight: 400
    font-size 1.4rem
    &:before
      background-color #bb5e36;
  &__subtitle
    color: #121212;
    font-family: Intro;
    font-size: 1.8rem;
    font-weight: 400;
    margin-bottom 4rem
  &__items
    display flex
    align-items flex-start
    justify-content space-between
    flex-wrap wrap
    margin-bottom 5rem
  &__item
    color: #121212;
    font-family: "Open Sans";
    font-size: 1.4rem;
    font-weight: 400;
    position relative
    padding-left 2.4rem
    margin-bottom 1.6rem
    &:before
      content ''
      position absolute
      width 0.9rem
      height 0.9rem
      background-color: #bb5e36;
      top 5px
      left 0
  &__images
    display flex
    justify-content center
    align-items center
    flex-wrap wrap
    position relative

    &:before
      content ''
      position: absolute;
      right: -10rem;
      top: 0;
      background: url(../images/pluses.png);
      width: 34rem;
      height: 26.2rem;
    &:after
      content ''
      position: absolute;
      left: -10rem;
      bottom: 0;
      background: url(../images/pluses.png);
      width: 34rem;
      height: 26.2rem;
  &__img
    width 360px
    height 300px
    object-fit cover
  &__footer
    text-align center
    padding-bottom 12rem
.works__images a
  max-width 360px
  max-height 300px
  margin-bottom 3rem
  margin-right 3rem
  z-index 10
@media (max-width: 1024px)
  .works
    &__img
      width 100%
    &__footer
      padding-bottom 10rem
  .works__images a
    width 44%
    margin-bottom 1rem
    margin-right 1rem
@media (max-width: 719px)
  .works
    &__images
      margin-bottom 2rem
      &:before
        display none
      &:after
        display none
    &__img
      width 100%
      height 13.2rem
      margin-bottom: 0rem;
      margin-right: 0rem;
    &__items
      margin-bottom 2rem
    &__item
      font-size: 1.4rem;
    &__subtitle
      margin-bottom 2rem
      font-size: 1.4rem;
    &__footer
      padding-bottom 8rem

  .works__images a
    width: 33%;
    height 13.2rem;
    margin-bottom: 0rem;
    margin-right: 0rem;
