.sketches
  padding-top 3rem
  &#top-slider
    // padding 0
    & ^[0]__blocks
      margin 0
      height 32rem
  &__top-slider
    width 30rem
    flex-shrink: 0
    margin-right 2rem
    & img
      width 100%
  &__heading
    display flex
    justify-content: space-between
  &__header
    font-family: 'Intro'
    font-size: 4rem
    color black
    align-self: center
  &__handwritten
    padding-top 5.6rem
  &__blocks
    display flex
    height 45rem
    width 100%
    margin-top 3rem
    margin-bottom 2rem
    transition .2s
  &__controls
    margin-bottom 2rem
    display flex
    justify-content: center
    align-items: center
  &__button
    display flex
    justify-content: center
    align-items: center
    width 6.4rem
    height 6.4rem
    border-radius 50%
    background-color #F1E0D0
    box-shadow: 0 6px 14px rgba(0,0,0,.1)
    transition box-shadow .3s
    cursor pointer
    &:hover
      box-shadow: none
    &_mini
      position absolute
      top -1.6rem
      left 0
      width 4.1rem
      height 4.1rem
    & svg
      height 38.5%
      & path
        fill white
    &_left
      margin-right 3rem
      & svg
        transform: rotate(90deg) translateY(20%)
    &_right
      margin-left 6rem
      & svg
        transform: rotate(-90deg) translateY(20%)
  &__line
    position relative
    width 27rem
    height 0.9rem
    background-color #CECECE
    z-index 1
    &:after
      content: ''
      position absolute
      top 0
      left 100%
      width 3rem
      height .9rem
      background-color #CECECE
      z-index: -1
  &__circle
    display flex
    justify-content: center
    align-items: center
    height 73%
    width 73%
    border-radius 50%
    background-color #D19863
  &__range
    position relative
  &__input
    position absolute
    top -1rem
    left 0
    width 30rem
    height 3rem
    padding-left 1.3em
    padding-right 0.2em
    z-index 2
    opacity 0
    cursor pointer

.sketch
  width 45.7rem
  height 39rem
  flex-shrink: 0
  margin-right 5rem
  background-color white
  box-shadow: 0 1rem 2.4rem rgba(0,0,0,0.08)
  padding-top 5rem
  transition .5s .2s
  text-align center
  cursor pointer
  will-change: height
  &__label
    font-family: 'Open Sans'
    font-size: 3rem
    font-weight: 700
    margin-top 2rem
  &__more
    display inline-block
    margin-top 4rem
    padding-bottom 0.5rem
    border-bottom 1px dashed #C88B52
    opacity 0
    transition .5s
    cursor pointer
    & svg
      transform: rotate(-90deg) translateX(.2rem)
      width 1.15rem
      & path
        fill #C88B52
  &__text
    font-family: 'Open Sans'
    font-size: 1.8rem
    font-weight: 600
    margin-left 0.3rem
    color #C88B52
  &:hover
    height 45rem
    transition: .5s
    & ^[0]__sketch svg path
      stroke #C88B52
    & ^[0]__more
      opacity 1
      transition .5s .2s
  &__sketch
    & svg
      height 17rem
      & path
        transition: .5s
  &__shape svg
    height 1.7rem
    margin-top 3.8rem

@media (max-width: 1024px)
  .sketches
    &__blocks
      height 36rem
    &__header
      font-size: 2.8rem
    &__handwritten
      padding-top 2rem
  .sketch
    height 31.9rem
    width 37.2rem
    &__sketch svg
      height 13rem
    &__shape svg
      margin-top 2.5rem
    &__more
      margin-top 2.5rem
    &__label
      font-size: 2.4rem
    &__text
      font-size: 1.4rem
    &:hover
     height 36rem

@media (max-width: 719px)
  .sketches
    &__blocks
      height 27rem
    &__heading
      flex-direction: column
      align-self: flex-end
    &__header
      font-size: 2rem
      order -1
    &__handwritten
      margin-top 2rem
    &__range
      display none
    &__wrapper
      display: block;
      max-width: 29rem;
      margin: 0 auto;
      overflow: hidden;
  .sketch
    width 100%
    height 24.9rem
    padding-top 2rem
    &:hover
      height 24.9rem
      & ^[0]__more
        display none
    &__sketch svg
      height 10.9rem
    &__label
      margin-top 1.4rem
