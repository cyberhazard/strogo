.header__slider .swiper-container {
  width: 100%;
  height: 100%;
}
.header__slider .swiper-slide {
  text-align: center;
  font-size: 18px;
  background: #fff;
  /* Center slide text vertically */
  display: -webkit-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -ms-flex-align: center;
  -webkit-align-items: center;
  align-items: center;
  cursor pointer
}

.header__controls
  user-select none
  display: flex;
  margin-bottom 1rem
.header
  &__pag
    border: 0.2rem solid #bb5e36;
    padding: 10px 8px 7px 5px;
    transition 0.3s
    &:hover
      background #bb5e36
    &_left
      cursor pointer
      border-right 0
      & svg
        transform: rotate(90deg)
        height:  1.2rem
        & path
          transition: .3s
          fill #bb5e36
      &:hover path
        fill white
    &_right
      cursor pointer
      padding-right: 5px;
      & svg
        transform: rotate(-90deg)
        height:  1.2rem
        & path
          transition: .3s
          fill #bb5e36
      &:hover path
        fill white
@media (max-width: 719px)
  .header
    &__slider
      display none
