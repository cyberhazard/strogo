.jobs
  padding-top 7rem
  &__heading
    display flex
    justify-content: space-between
    align-items: center
    margin-bottom 6rem
  &__header
    font-family: 'Intro'
    font-size: 4rem
    color: black
  &__handwritten
    padding-top 7rem
  &__groups
    display flex
    justify-content: space-between
    padding 0 10rem
    margin-bottom 7rem
  &__group
    font-family: 'Open Sans'
    font-size: 1.8rem
    color black
    padding: 0 .5rem
    padding-bottom 0.7rem
    border-bottom 3px solid transparent
    white-space nowrap
    cursor pointer
    transition .3s
    &:hover
      border-color #D19863
    &_active
      border-color #D19863
  &__blocks
    display flex
    flex-wrap: wrap
    justify-content: space-between
    position relative
    z-index 1
    margin-bottom 5rem
  &__block
    position relative
    display flex
    flex-direction: column
    align-items: center
    background-color #fff
    padding-left 2rem
    padding-right 2rem
    padding-bottom 4rem
    margin-bottom 3rem
    width calc(100% / 3 - 2.6rem)
    box-shadow: 0 10px 24px rgba(0,0,0,0.08)
    &_left:before
      content: ''
      width 38rem
      height 28.8rem
      background: url('./../../images/pluses.png') center center/cover no-repeat
      transform: translate(-50%,-50%)
      position absolute
      top 100%
      left 0
      z-index -1
    &_right:before
      content: ''
      width 38rem
      height 28.8rem
      background: url('./../../images/pluses.png') center center/cover no-repeat
      transform: translate(50%,50%)
      position absolute
      bottom 100%
      right 0
      z-index -1

  &__shape
    margin-bottom 3rem
    & svg
      width 6rem
  &__label
    flex-grow: 1
    display flex
    align-items: center
    font-family: 'Open Sans'
    font-size: 1.8rem
    font-weight: 600
    color black
    margin-bottom 2rem
  &__price
    font-family: 'Open Sans'
    font-size: 3rem
    font-weight: 700
    color black
    & span
      font-size: 1.6rem
      font-weight: 400
  &__image
    width 100%
  &__footer
    text-align center
    margin-bottom 12rem
  &__button
    display inline-block
  &__category
    display none
    font-family: 'Open Sans'
    font-size: 2.4rem
    font-weight: 700
    margin-bottom 1.4rem
  &__select
    position relative
    display none
    width 24.2rem
    font-family: 'Open Sans'
    font-size: 1.6rem
    padding 1.3rem 0 1.7rem 4rem
    background-color #F5F5F5
    border-radius 14rem
    margin-bottom 6rem
  &__oselect
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    opacity 0
  &__angle
    position absolute
    top 1.2rem
    right 3rem
    & svg
      height .65rem

@media (max-width: 1024px)
  .jobs
    &__category
      display block
    &__heading
      margin-bottom 2.3rem
    &__header
      font-size: 2.8rem
    &__blocks
      margin-bottom 3rem
    &__handwritten
      font-size: 2.4rem
      padding-top 4rem
    &__groups
      display none
    &__block
      width calc(100% / 2 - 2.6rem)
    &__select
      display inline-block
    &__label
      font-size: 1.6rem
    &__price
      font-size: 2.4rem
      & span
        font-size: 1.4rem
    &__footer
      margin-bottom 10rem

@media (max-width: 719px)
  .jobs
    padding-top 6rem
    &__header
      font-size: 2rem
    &__category
      font-size: 1.6rem
    &__handwritten
      display none
    &__select
      margin-bottom 4rem
      font-size: 1.4rem
    &__block
      width 100%
      padding-bottom 3.4rem
      margin-bottom 2rem
      &_left:before, &_right:before
        display none
    &__shape
      margin-bottom 1.8rem
    &__label
      font-size: 1.4rem
      margin-bottom 1.5rem
    &__price
      font-size: 1.8rem
      & span
        font-size: 1.2rem
    &__footer
      margin-bottom 8rem
