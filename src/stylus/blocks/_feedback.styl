.feedback
  background url('../images/bg-feedback.png') center center/cover no-repeat
  padding 14rem 0 14rem 0
  &__content
    display flex
    flex-direction column
    align-items: center
    justify-content: center
  &__title
    font-size 4rem
    font-family Intro
    text-transform: uppercase
    color white
    margin-bottom 6.2rem
  &__item
    margin-bottom 3.2rem
    &:nth-child(2)
      margin-bottom 6rem
  &__form
    text-align: center
  &__field
    display: block
    font-size 1.6rem
    color #D8D8D8
    font-family: Open Sans
    margin-bottom 2rem
    text-align: left
  &__input
    width 40rem
    background-color RGBA(42,42,42,0.9)
    border 0.1rem solid #565656
    color #626262
    padding 1.5rem 3.4rem 1.5rem 3.4rem
    border-radius 14rem
    font-family: Open Sans
    transition 0.3s
    &:hover
      border-color: #D19863
    &:focus
      border-color: #D19863
  &__submit
    display: inline-block

// MEDIA

@media (max-width: 1024px)
  .feedback
    padding 10rem 0 10rem 0
    &__title
      font-size 2.8rem
      margin-bottom 4.2rem
    &__field
      font-size 1.4rem
      margin-bottom 1.4rem
    &__input
      font-size 1.4rem
      padding 1.1rem 2.9rem 1.1rem 2.9rem
      width 339px
    &__item
      margin-bottom 2.6rem
      &:nth-child(2)
        margin-bottom 4.4rem
@media (max-width: 719px)
  .feedback
    padding 5rem 0 6rem 0
    &__title
      font-size 2rem
      margin-bottom 2.6rem
      text-align: center
      line-height: 3rem
    &__field
      font-size 1.2rem
      margin-bottom 1.2rem
    &__input
      font-size 1.2rem
      width 28.8rem
      padding 0.8rem 3rem 0.8rem 3rem
    &__item
      margin-bottom 2.6rem
      &:nth-child(2)
        margin-bottom 3.8rem

